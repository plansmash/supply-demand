---
layout: layouts/base.njk
title: Beer
permalink: /beer/
---

<div class="container">
  <h1 class="mb-4">On Tap</h1>
  
  {% if beers.error %}
    <div class="data-unavailable">
      <div class="icon">
        <i class="fas fa-beer" aria-hidden="true"></i>
      </div>
      <h2>Beer List Unavailable</h2>
      <p>{{ beers.error }}</p>
      <p class="mt-3">Please check back later or contact us for our current selection.</p>
    </div>
  {% elif beers.items.length > 0 %}
    <div class="row">
      {% for beer in beers.items %}
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            {% if beer.image_url %}
              <img src="{{ beer.image_url }}" class="card-img-top" alt="{{ beer.name }}">
            {% endif %}
            <div class="card-body">
              <h2 class="card-title h5">{{ beer.name }}</h2>
              <p class="card-text text-muted">{{ beer.style }}</p>
              {% if beer.description %}
                <p class="card-text">{{ beer.description }}</p>
              {% endif %}
              <div class="d-flex justify-content-between align-items-center mt-3">
                {% if beer.abv %}<span class="badge bg-primary">{{ beer.abv }}% ABV</span>{% endif %}
                {% if beer.ibu %}<span class="badge bg-secondary">{{ beer.ibu }} IBU</span>{% endif %}
              </div>
              {% if beer.available %}
                <div class="mt-2">
                  {% if beer.available == "yes" or beer.available == "true" %}
                    <span class="badge bg-success">Available</span>
                  {% else %}
                    <span class="badge bg-warning text-dark">Coming Soon</span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="alert alert-info" role="alert">
      <h2 class="h5">Beer list coming soon</h2>
      <p class="mb-0">We're currently updating our beer selection. Check back soon!</p>
    </div>
  {% endif %}
</div>
