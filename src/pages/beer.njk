---
layout: base.njk
title: Beer
permalink: /beer/
---

<div class="container">
  <h1 class="mb-4">Beers</h1>
  
  {% if beers.error %}
    <div class="data-unavailable">
      <div class="icon">
        <i class="fas fa-beer" aria-hidden="true"></i>
      </div>
      <h2>Beer List Unavailable</h2>
      <p>{{ beers.error }}</p>
      <p class="mt-3">Please check back later or contact us for our current selection.</p>
    </div>
  {% elif beers.items.length > 0 %}
    <div class="row">
      {% for beer in beers.items %}
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            {% if beer.image_url %}
              <img src="{{ beer.image_url }}" class="card-img-top" alt="{{ beer.name }}">
            {% endif %}
            <div class="card-body">
              <h2 class="card-title h5">{{ beer.name }}</h2>
              <p class="card-text text-muted">{{ beer.style }}</p>
              {% if beer.description %}
                <p class="card-text">{{ beer.description }}</p>
              {% endif %}
              <div class="d-flex justify-content-between align-items-center mt-3">
                {% if beer.abv %}<span class="badge bg-primary">{{ beer.abv }}% ABV</span>{% endif %}
                {% if beer.ibu %}<span class="badge bg-secondary">{{ beer.ibu }} IBU</span>{% endif %}
              </div>
              {% set hasFormat = beer.ontap or beer.can or beer.bottle or beer.togo %}
              {% if hasFormat %}
                <div class="mt-3">
                  <div class="text-muted small mb-1">Available as:</div>
                  <div class="d-flex flex-wrap gap-2">
                    {% if beer.ontap and beer.ontap.trim() %}<span class="badge bg-success"><i class="fas fa-beer" aria-hidden="true"></i> On Tap</span>{% endif %}
                    {% if beer.can and beer.can.trim() %}<span class="badge bg-info"><i class="fas fa-prescription-bottle" aria-hidden="true"></i> Cans</span>{% endif %}
                    {% if beer.bottle and beer.bottle.trim() %}<span class="badge bg-info"><i class="fas fa-wine-bottle" aria-hidden="true"></i> Bottles</span>{% endif %}
                    {% if beer.togo and beer.togo.trim() %}<span class="badge bg-warning text-dark"><i class="fas fa-shopping-bag" aria-hidden="true"></i> To Go</span>{% endif %}
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="alert alert-info" role="alert">
      <h2 class="h5">Beer list coming soon</h2>
      <p class="mb-0">We're currently updating our beer selection. Check back soon!</p>
    </div>
  {% endif %}
</div>
