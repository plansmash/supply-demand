---
layout: base.njk
title: Pizza
permalink: /pizza/
---

<div class="container">
  <h1 class="mb-4">Artisan Pizza</h1>
  
  {% set pizzas = menu.items | selectattr('category', 'equalto', 'pizza') | list %}
  
  {% if menu.error %}
    <div class="data-unavailable">
      <div class="icon">
        <i class="fas fa-pizza-slice" aria-hidden="true"></i>
      </div>
      <h2>Pizza Menu Unavailable</h2>
      <p>{{ menu.error }}</p>
      <p class="mt-3">Please check back later or contact us for our current menu.</p>
    </div>
  {% elif pizzas.length > 0 %}
    <div class="row">
      {% for item in pizzas %}
        <div class="col-md-6 mb-4">
          <div class="card h-100">
            {% if item.image_url %}
              <img src="{{ item.image_url }}" class="card-img-top" alt="{{ item.item_name }}">
            {% endif %}
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h2 class="card-title h5 mb-0">{{ item.item_name }}</h2>
                {% if item.price %}
                  <span class="fw-bold text-primary">{{ item.price | formatPrice }}</span>
                {% endif %}
              </div>
              {% if item.description %}
                <p class="card-text">{{ item.description }}</p>
              {% endif %}
              <div class="mt-2">
                {% if item.vegetarian == "yes" or item.vegetarian == "true" %}
                  <span class="badge bg-success">
                    <i class="fas fa-leaf" aria-hidden="true"></i>
                    <span class="visually-hidden">Vegetarian</span>
                    Vegetarian
                  </span>
                {% endif %}
                {% if item.vegan == "yes" or item.vegan == "true" %}
                  <span class="badge bg-success">
                    <i class="fas fa-seedling" aria-hidden="true"></i>
                    <span class="visually-hidden">Vegan</span>
                    Vegan
                  </span>
                {% endif %}
                {% if item.gluten_free == "yes" or item.gluten_free == "true" %}
                  <span class="badge bg-info">
                    <span class="visually-hidden">Gluten Free</span>
                    GF
                  </span>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="alert alert-info" role="alert">
      <h2 class="h5">Pizza menu coming soon</h2>
      <p class="mb-0">We're currently updating our pizza menu. Check back soon!</p>
    </div>
  {% endif %}
</div>
