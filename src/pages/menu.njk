---
layout: base.njk
title: Menus
permalink: /menu/
---

<div class="container">
  <h1 class="mb-4">{{ title }}</h1>
  
  {# Table of Contents #}
  <nav class="mb-5" aria-labelledby="menuSections">
    <h2 class="visually-hidden" id="menuSections">Menu sections</h2>
    <ul class="list-unstyled d-flex flex-wrap gap-3 mb-0">
      <li><a href="#beers">Beers</a></li>
      {% if menu.items.length > 0 %}
        {% set categories = [] %}
        {% for item in menu.items %}
          {% if item.category and item.category not in categories %}
            {% set categories = (categories.push(item.category), categories) %}
          {% endif %}
        {% endfor %}
        {% for category in categories %}
          {% if category %}
            <li><a href="#{{ category | lower | replace(' ', '-') }}">{{ category }}</a></li>
          {% endif %}
        {% endfor %}
      {% endif %}
    </ul>
  </nav>
  
  {# Beer Section #}
  <section id="beers" class="mb-5">
    <h2 class="h3 mb-3 border-bottom pb-2">Beers</h2>
    {% if beers.error %}
      <div class="alert alert-warning" role="alert">
        <p class="mb-0">{{ beers.error }}</p>
      </div>
    {% elif beers.items.length > 0 %}
      <div class="row">
        {% for beer in beers.items | sort(false, false, 'name') %}
          <div class="col-md-6 col-lg-4 mb-3">
            <div class="card h-100">
              {% if beer.image_url %}
                <img src="{{ beer.image_url }}" class="card-img-top" alt="{{ beer.name }}">
              {% endif %}
              <div class="card-body">
                <h3 class="card-title h6">{{ beer.name }}</h3>
                {% if beer.style %}
                  <p class="text-muted small mb-2">{{ beer.style }}</p>
                {% endif %}
                {% if beer.description %}
                  <p class="card-text small">{{ beer.description }}</p>
                {% endif %}
                <div class="mt-2">
                  {% if beer.abv %}
                    <span class="badge bg-primary me-1">ABV: {{ beer.abv }}%</span>
                  {% endif %}
                  {% if beer.ibu %}
                    <span class="badge bg-secondary">IBU: {{ beer.ibu }}</span>
                  {% endif %}
                </div>
                {% if beer.ontap or beer.can or beer.bottle %}
                  <div class="mt-2">
                    {% if beer.ontap and beer.ontap != '' %}
                      <span class="badge bg-success me-1">On Tap</span>
                    {% endif %}
                    {% if beer.can and beer.can != '' %}
                      <span class="badge bg-info me-1">Cans</span>
                    {% endif %}
                    {% if beer.bottle and beer.bottle != '' %}
                      <span class="badge bg-info">Bottles</span>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="alert alert-info" role="alert">
        <p class="mb-0">Beer list coming soon.</p>
      </div>
    {% endif %}
  </section>
  
  {# Food Menu Section #}
  <div class="mt-4 mb-4 p-3 bg-light rounded">
    <p class="mb-0 small text-muted">
      <strong>Dietary Key:</strong>
      <span class="badge bg-success ms-2">V</span> Vegetarian
      <span class="badge bg-success ms-2">VG</span> Vegan
      <span class="badge bg-info ms-2">GF</span> Gluten Free
    </p>
  </div>
  
  {% if menu.error %}
    <div class="data-unavailable">
      <div class="icon">
        <i class="fas fa-utensils" aria-hidden="true"></i>
      </div>
      <h2>Menu Unavailable</h2>
      <p>{{ menu.error }}</p>
      <p class="mt-3">Please check back later or contact us for our current menu.</p>
    </div>
  {% elif menu.items.length > 0 %}
    {# Extract unique categories manually #}
    {% set categories = [] %}
    {% for item in menu.items %}
      {% if item.category and item.category not in categories %}
        {% set categories = (categories.push(item.category), categories) %}
      {% endif %}
    {% endfor %}
    
    {% for category in categories %}
      {% if category %}
        <section id="{{ category | lower | replace(' ', '-') }}" class="mb-5">
          <h2 class="h3 mb-3 text-capitalize border-bottom pb-2">{{ category }}</h2>
          <div class="row">
            {% for item in menu.items | sort(false, false, 'item_name') %}
              {% if item.category == category %}
              <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                  {% if item.image_url %}
                    <img src="{{ item.image_url }}" class="card-img-top" alt="{{ item.item_name }}">
                  {% endif %}
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                      <h3 class="card-title h6 mb-0">{{ item.item_name }}</h3>
                      {% if item.price %}
                        <span class="fw-bold text-primary">{{ item.price | formatPrice }}</span>
                      {% endif %}
                    </div>
                    {% if item.description %}
                      <p class="card-text small">{{ item.description }}</p>
                    {% endif %}
                    <div class="mt-2">
                      {% set hasVeg = item.vegetarian and item.vegetarian != '' %}
                      {% set hasVegan = item.vegan and item.vegan != '' %}
                      {% set hasGF = item.gluten_free and item.gluten_free != '' %}
                      {% if hasVeg %}
                        <span class="badge bg-success">
                          <span class="visually-hidden">Vegetarian</span>
                          V
                        </span>
                      {% endif %}
                      {% if hasVegan %}
                        <span class="badge bg-success">
                          <span class="visually-hidden">Vegan</span>
                          VG
                        </span>
                      {% endif %}
                      {% if hasGF %}
                        <span class="badge bg-info">
                          <span class="visually-hidden">Gluten Free</span>
                          GF
                        </span>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
              {% endif %}
            {% endfor %}
          </div>
        </section>
      {% endif %}
    {% endfor %}
  {% else %}
    <div class="alert alert-info" role="alert">
      <h2 class="h5">Menu coming soon</h2>
      <p class="mb-0">We're currently updating our menu. Check back soon!</p>
    </div>
  {% endif %}
</div>
