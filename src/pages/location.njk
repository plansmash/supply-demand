<div class="row">
  <div class="col-md-6 mb-4">
    <h2>Location</h2>
    <address>
      <strong>{{ site.name }}</strong><br>
      {{ site.address.street }}<br>
      {{ site.address.city }}, {{ site.address.province }}, {{ site.address.country }}<br>
      {% if site.contact.phone %}<a href="tel:{{ site.contact.phone }}">{{ site.contact.phone }}</a><br>{% endif %}
      <a href="mailto:{{ site.contact.email }}">{{ site.contact.email }}</a>
    </address>
    
    <h2>Hours</h2>
    {% set taproomHoursHeadingLevel = "h3" %}
    {% set kitchenHoursHeadingLevel = "h3" %}
    {% set specialHoursHeadingLevel = "h3" %}
    {% include "components/hours.njk" %}
    
    <h3>Parking</h3>
    <p>[Add parking information here]</p>
  </div>
  
  <div class="col-md-6 mb-4">
    <h2>Map</h2>
    <div class="ratio ratio-4x3">
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2919.856895839348!2d-81.25156!3d42.98506!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x882ef21d4f0d3b3f%3A0x5a0f5b5b5b5b5b5b!2s420%20Talbot%20St%2C%20London%2C%20ON%2C%20Canada!5e0!3m2!1sen!2sus!4v1609459200000!5m2!1sen!2sus" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade"
        title="Supply & Demand Beer and Pizza location map">
      </iframe>
    </div>
    <p class="mt-2 small text-muted">
      <a href="https://www.google.com/maps/place/420+Talbot+St,+London,+ON,+Canada">
        Open in Google Maps <i class="fas fa-external-link-alt" aria-hidden="true"></i>
      </a>
    </p>
  </div>
</div>
