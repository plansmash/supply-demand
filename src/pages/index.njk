---
layout: base.njk
title: Home
permalink: /
---

{# Hero Section #}
<div class="hero-section">
  <img src="/logo.jpg" class="hero-image w-100" alt="{{ site.name }} - Craft Beer and Pizza">
  <div class="hero-content bg-light py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <h1 class="display-3 fw-bold mb-3">{{ site.name }}</h1>
          <p class="lead fs-4 mb-4">{{ site.description }}</p>
          <div class="mt-4">
            <a href="/menu/" class="btn btn-primary btn-lg me-2">View Menu</a>
            <a href="/events/" class="btn btn-outline-primary btn-lg">Upcoming Events</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{# Featured Beers Section #}
<div class="container my-5">
  <h2 class="text-center mb-4">On Tap Now</h2>
  {% if beers.error %}
    <div class="data-unavailable">
      <div class="icon">
        <i class="fas fa-beer" aria-hidden="true"></i>
      </div>
      <h3>Beer List Unavailable</h3>
      <p>{{ beers.error }}</p>
    </div>
  {% elif beers.items.length > 0 %}
    <div class="row">
      {% for beer in beers.items | reverse | slice(0, 3) %}
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            {% if beer.image_url %}
              <img src="{{ beer.image_url }}" class="card-img-top" alt="{{ beer.name }}">
            {% endif %}
            <div class="card-body">
              <h3 class="card-title h5">{{ beer.name }}</h3>
              <p class="card-text text-muted">{{ beer.style }}</p>
              {% if beer.description %}
                <p class="card-text">{{ beer.description }}</p>
              {% endif %}
              <div class="d-flex justify-content-between align-items-center">
                {% if beer.abv %}<span class="badge bg-primary">{{ beer.abv }}% ABV</span>{% endif %}
                {% if beer.ibu %}<span class="badge bg-secondary">{{ beer.ibu }} IBU</span>{% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="text-center mt-4">
      <a href="/beer/" class="btn btn-outline-primary">See Full Beer List</a>
    </div>
  {% else %}
    <div class="text-center text-muted">
      <p>Check back soon for our beer list!</p>
    </div>
  {% endif %}
</div>

{# Upcoming Events Section #}
<div class="bg-light py-5">
  <div class="container">
    <h2 class="text-center mb-4">Upcoming Events</h2>
    {% if events.error %}
      <div class="data-unavailable">
        <div class="icon">
          <i class="fas fa-calendar" aria-hidden="true"></i>
        </div>
        <h3>Events Unavailable</h3>
        <p>{{ events.error }}</p>
      </div>
    {% elif events.items.length > 0 %}
      <div class="row">
        {% for event in events.items | slice(0, 2) %}
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-body">
                <h3 class="card-title h5">{{ event.title }}</h3>
                <p class="text-muted">
                  <i class="far fa-calendar" aria-hidden="true"></i>
                  {{ event.date | formatDate }}
                  {% if event.time %} at {{ event.time }}{% endif %}
                </p>
                {% if event.description %}
                  <p class="card-text">{{ event.description }}</p>
                {% endif %}
                {% if event.link %}
                  <a href="{{ event.link }}" class="btn btn-sm btn-outline-primary">Learn More</a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="text-center mt-4">
        <a href="/events/" class="btn btn-outline-primary">See All Events</a>
      </div>
    {% else %}
      <div class="text-center text-muted">
        <p>No upcoming events at this time. Check back soon!</p>
      </div>
    {% endif %}
  </div>
</div>
